{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",

    "moduleResolution": "bundler",
    "types": ["node"],

    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.*.ts",
    "vitest.config.ts",
    "scripts/**/*.ts",
    "scripts/**/*.mjs"
  ]
}
